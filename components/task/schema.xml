<entry name="taskid_size" type="int" default="8"/>
<entry name="tasks" type="list" auto_index_field="idx">
    <entry name="task" type="dict">
        <entry name="function" type="c_ident" />
        <entry name="name" type="ident" />
        <entry name="stack_size" type="int" />
        <entry name="associated_domains" type="list" default="[]" auto_index_field="domx">
            <entry name="domain" type="dict">
                <entry name="name" />
                <entry name="write_access" type="bool" />
            </entry>
        </entry>
    </entry>
</entry>
