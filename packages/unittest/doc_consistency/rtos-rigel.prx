<?xml version="1.0" encoding="UTF-8" ?>
<system>
    <modules>
        <module name="unittest.doc_consistency.build"/>
        <module name="{{architecture}}.rtos-rigel">
            <prefix>rtos</prefix>
            <signalset_size>8</signalset_size>
            <api_asserts>true</api_asserts>
            <internal_asserts>true</internal_asserts>
            <fatal_error>fatal</fatal_error>

            <tasks>
                <task>
                    <name>a</name>
                    <function>fn_a</function>
                    <stack_size>64</stack_size>
                    <start>true</start>
                </task>
            </tasks>


            <signal_labels>
                <signal_label>
                    <name>test</name>
                    <global>true</global>
                </signal_label>
            </signal_labels>

            <timers>
                <timer>
                    <name>test</name>
                    <enabled>true</enabled>
                    <reload>10</reload>
                    <task>a</task>
                    <sig_set>test</sig_set>
                </timer>
            </timers>

            <interrupt_events>
                <interrupt_event>
                    <name>tick</name>
                    <task>a</task>
                    <sig_set>test</sig_set>
                </interrupt_event>
            </interrupt_events>

            <mutexes>
                <mutex>
                    <name>test</name>
                </mutex>
            </mutexes>

            <mutex>
                <stats>true</stats>
            </mutex>

            <profiling>
                <task_uptime>true</task_uptime>
            </profiling>

            <message_queues>
                <message_queue>
                    <name>test</name>
                    <message_size>2</message_size>
                    <queue_length>2</queue_length>
                </message_queue>
            </message_queues>
        </module>
    </modules>
</system>
